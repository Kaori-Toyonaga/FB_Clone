<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="top">
    <p class="label"><%= f.label :氏名を入力 %></p>
    <p><%= f.text_field :name, class: "text_field" %></p>
    <p class="label"><%= f.label :メールアドレスを入力 %></p>
    <p><%= f.email_field :email,  class: "text_field" %></p>
    <p class="label"><%= f.label :パスワードを作成 %></p>
    <p><%= f.password_field :password,  class: "text_field" %></p>
    <p class="label"><%= f.label :パスワード確認 %></p>
    <p><%= f.password_field :password_confirmation, class: "text_field" %></p>
    <%= f.submit "登録", class: "button" %>
    <br>
    <p><%= link_to 'すでにアカウントをお持ちですか？', new_session_path %></p>
  </div>

<% end %>
